<%- include("partials/_header") -%>

  <body>
    <div class="tm-page-wrap mx-auto">
      <div class="position-relative mb-5">
        <div class="tm-welcome-container tm-fixed-header tm-fixed-header-3">
          <div class="text-center add-section">
            <p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 mt-lg-0 mt-5 mx-auto">
              Welcome again!
            </p>
          </div>
        </div>
        <div id="tm-fixed-header-bg"></div> <!-- Header image -->
      </div>
      <!-- Page content -->
      <main>
        <div class="container">
          <div class="mx-auto tm-content-container">
            <div class="row mt-3pb-3 mb-4">
              <div class="col-10 offset-1">
                <div class="mx-auto tm-about-text-container add-paragraph">
                  <h2 class="tm-page-title mb-3 tm-text-primary add-header">Edit</h2>
                  <p>
                    You can update the information about your favorite you saved before here.
                  </p>
                </div>
              </div>
            </div>
            <div class="mx-auto pb-3 tm-about-text-container">
              <div class="row">
                <div class="col-lg-10 offset-1 mb-5">
                  <form method="POST" action="/users/datas/<%= data.id%>?_method=PUT" class="tm-contact-form">
                    <div class="form-group">
                      <input type="name" name="name" id="name" value="<%= data.name %>" class="form-control rounded-0"
                        placeholder="Name" required="" />
                    </div>

                    <div class="form-group">
                      <textarea rows="8" text="description" name="description" id="description"
                        class="form-control rounded-0" placeholder="Tell us about your friend"
                        required><%= data.description %></textarea>
                    </div>

                    <div class="form-group mb-0">
                      <button type="submit"
                        class="btn btn-primary rounded-0 d-block ml-auto mr-0 tm-btn-animate tm-btn-submit tm-icon-submit send-button"><span><i
                            class="fa-regular fa-paper-plane"></i></span></button>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>

        </div>
      </main>
    </div>
    <%- include("partials/_footer") -%>
