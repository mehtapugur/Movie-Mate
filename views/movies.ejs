<%- include("partials/_header"); %>
  <div class="home-container">
    <%- include("partials/_navigation"); %>
      <div class="container">
        <div class="row row--top-40">
          <div class="col-md-12">
            <h2 class="row__title">Movies (<%= movies.length %>)</h2>
          </div>
          <div class="col-md-12">
            <button type="button" class="button button--primary" aria-label="Logout">
              <a href="/users/add_movie">Add movies</a>
            </button>
          </div>

        </div>
        <div class="row row--top-20">
          <div class="col-md-12">
            <div class="table-container">
              <table class="table">
                <thead class="table__thead">
                  <opttr>
                    <th class="table__th">Name</th>
                    <th class="table__th">Description</th>
                  </opttr>
                </thead>
                <tbody class="table__tbody">
                  <% for(let i=0; i < movies.length; i++) { %>
                    <tr class="table-row">
                      <td class="table-row__td" style="display: flex; flex-direction: column;">
                        <div class="table-row__info">
                          <a href="/users/datas/<%= movies[i].id %>" class="tm-img-overlay">
                            <p class="table-row__name">
                              <b>
                                <i class="fas fa-play tm-overlay-icon">
                                  <%= movies[i].name %>
                                </i>
                              </b>
                            </p>
                          </a>
                        </div>
                        <div class="table-row__info">
                          <p class="table-row__name">
                            <%= movies[i].description %>
                          </p>
                        </div>
                      </td>
                      <td class="table-row__td">
                        <div class="table-row__info">
                          <div class="text-center">
                            <a href="/users/datas/<%= movies[i].id %>?_method=DELETE"
                              class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
                              onclick="return confirm('Are you sure?')"><span>DeleteMovie</span></a>
                          </div>
                        </div>
                      </td>
                      <td class="table-row__td">
                        <div class="table-row__info">
                          <div class="text-center">
                            <a href="/users/datas/edit/<%= movies[i].id %>"
                              class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>UpdateMovie</span></a>
                          </div>
                        </div>
                      </td>
                      <td class="table-row__td">
                        <div class="table-row__info">
                          <div class="text-center">
                            <a href="/users/movies/share/<%= movies[i].id %>"
                              class="btn btn-primary p-0 mb-4 tm-btn-animate tm-btn-download tm-icon-download"><span>Share</span></a>
                          </div>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
  <%- include("partials/_footer"); %>
