    <%- include("partials/_navigation"); %>
      <div class="container">
        <div class="row row--top-40">
          <div class="col-md-12">
            <h2 class="row__title">Dashboard (<%= shared.length %>)</h2>
          </div>
        </div>
        <div class="row row--top-20">
          <div class="col-md-12">
            <div class="table-container">
              <table class="table">
                <thead class="table__thead">
                  <opttr>
                    <th class="table__th">Name</th>
                    <th class="table__th">Description</th>
                  </opttr>
                </thead>
                <tbody class="table__tbody">
                  <% for(let i=(shared.length-1); i>= 0; i--) { %>
                    <tr class="table-row">
                      <td class="table-row__td">
                        <div class="table-row__info">
                          <p class="table-row__name">
                            <%= shared[i].name %>
                              <%= shared[i].description %>
                          </p>
                        </div>
                      </td>
                      <td class="table-row__td">
                        <div class="table-row__info">
                          <div id= <%= shared[i].id %>
                            class="text-center begen-button btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download">
                            <span>beÄŸen
                            </span>
                          </div>
                        </div>
                        <div class="table-row__info">
                          <div class="text-center">
                            <a href="" class="btn btn-danger p-0 tm-btn-animate tm-btn-download tm-icon-download"
                              onclick="return confirm('Are you sure?')"><span>yorum
                              </span></a>
                          </div>
                        </div>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </div>
